{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "types": [
            "node",
            "@playwright/test"
        ]
    },
    "include": [
        "src/**/*",
        "tests/**/*",
        "playwright.config.ts",
        "scripts/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}